{% extends 'base.html.twig' %}

{% block title %}Administration des Produits{% endblock %}

{% block body %}
    <section class="container">
        <div class="row">
            {% include "_parts/_adminnav.html.twig" %}
            <main class="col-9 border border-light bg-white p-2">
                <h1>Liste des produit</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Stock</th>
                            <th>Cat√©gorie</th>
                            <th>Slug</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for produit in produits %}
                            <tr>
                                <td>{{produit.id}}</td>
                                <td><img src="{{asset('images/products/mini/300x300-' ~ produit.images[0].name)}}" class="img-thumbnail" width="50" alt="{{produit.name}}"></td>
                                <td>{{produit.name}}</td>
                                <td>{{produit.price}}</td>
                                <td>{{produit.stock}}</td>
                                <td>{{produit.categorie.name}}</td>
                                <td>{{produit.slug}}</td>
                                <td><a href="{{path('admin_product_edit', {id: produit.id})}}" class="btn btn-warning">Modifier</a></td>
                                <td><a href="" class="btn btn-danger">Supprimer</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>
        </div>
    </section>
{% endblock %}